.EXPORT_ALL_VARIABLES:

TOPDIR := $(shell if [ "$$PWD" != "" ]; then echo $$PWD; else pwd; fi)

INCLUDES = -I/usr/lib/java/include -I/usr/lib/java/include/linux
LIBS     = -L/usr/lib
ARCHIVES = jni/jni.o

CC   =g++
LD   =ld 
JAVA =javac
MAKE =make

all : \
	jnilib \
	jsubdirs

CFLAGS  = -DLINUX $(INCLUDES)
JFLAGS  = -deprecation
LDFLAGS = -shared

CSUBDIRS = jni
JSUBDIRS = \
	com/act365/net \
	com/act365/net/echo \
	com/act365/net/icmp \
	com/act365/net/ping \
	com/act365/net/ip \
	com/act365/net/sniffer \
	com/act365/net/dns \
	com/act365/net/udp \
	com/act365/net/tftp \
	com/act365/net/tcp \
	com/act365/net/rip

dummy:

jnilib: csubdirs 
	$(CC) $(LDFLAGS) $(LIBS) $(ARCHIVES) -o libcom_act365_net_Sockets.so

csubdirs: dummy
	set -e; for subdir in $(CSUBDIRS); do $(MAKE) -C $$subdir; done

jsubdirs: dummy
	for dir in $(JSUBDIRS); do $(JAVA) $(JFLAGS) $$dir/*.java ; done

clean : dummy
	rm -f libcom_act365_net_Sockets.so jswrench.tar.gz
	rm -f jni/*.o
	rm -f com/act365/net/*.class
	rm -f com/act365/net/*/*.class

backup : clean
	cd ../.. && tar cf - jswrench/src | gzip -9 > jswrench.tar.gz


